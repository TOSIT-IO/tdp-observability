[Unit]
Description=Loki service
After=network.target

[Service]
Type=simple
User=loki
ExecStart={{ loki_install_dir }}/loki-linux-amd64 -config.file {{ loki_conf_dir }}/config.yml
# Give a reasonable amount of time for the server to start up/shut down
TimeoutSec = 120
Restart = on-failure
RestartSec = 2

[Install]
WantedBy=multi-user.target
